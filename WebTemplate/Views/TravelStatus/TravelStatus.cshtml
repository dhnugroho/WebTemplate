@model IEnumerable<WebTemplate.Models.Participant>
@{
    ViewBag.Title = "TRAVEL STATUS";
    Layout = "~/Views/Shared/_LayoutLg.cshtml";
}
<div style="height:100px; padding:70px 0 0 0;" class="well navbar-fixed-top">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Menu/">Home</a></li>
        <li class="breadcrumb-item"><a href="/TravelStatus/">Travel Status List</a></li>
        <li class="breadcrumb-item active">Travel Status Detail</li>
    </ol>
</div>
<div class="container">
    <div style="margin-top:100px" class="row">
        <div class="col-md-8 col-md-offset-1"><h4 style="text-align:left; padding:10px;">TRAVEL STATUS</h4></div>
        <div class="col-md-3"></div>
        <form action="" id="loginForm">
            <div class="col-md-5 col-md-offset-1">
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                    <input class="form-control" type="text" name='noreg' placeholder="No. Reg" disabled />
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input class="form-control" type="text" name='username' placeholder="Username" disabled />
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-stats"></i></span>
                    <input class="form-control" type="text" name='class' placeholder="Class" disabled />
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-th-large"></i></span>
                    <input class="form-control" type="text" name='division' placeholder="Division" disabled />
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-check"></i></span>
                    <input class="form-control" type="text" name='division' placeholder="Assigned By" disabled />
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-edit"></i></span>
                    <input class="form-control" type="text" name='reason' placeholder="Reason of Assigment" disabled />
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-tag"></i></span>
                    <select class="form-control" disabled>
                        <option style="color:darkgray" hidden>Request Type</option>
                        <option value="plan">PLAN</option>
                        <option value="unplan">UNPLAN</option>
                    </select>
                </div>
                <label>Budget :</label>
                <br />
                <div class="form-group input-group has-success has-feedback">
                    <span class="input-group-addon">RP.</span>
                    <input class="form-control" type="number" name='budget' placeholder="Meal" disabled />
                </div>
                <div class="form-group input-group has-success has-feedback">
                    <span class="input-group-addon">RP.</span>
                    <input class="form-control" type="number" name='budget' placeholder="Hotel" disabled />
                </div>
                <div class="form-group input-group has-success has-feedback">
                    <span class="input-group-addon">RP.</span>
                    <input class="form-control" type="number" name='budget' placeholder="Ticket" disabled />
                </div>
                <div class="form-group input-group has-warning">
                    <span class="input-group-addon">RP.</span>
                    <input class="form-control" type="number" name='budget' placeholder="TOTAL" disabled />
                </div>
            </div>
            <div class="col-md-5">
                <p>Derparture Date :</p>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    <input class="form-control" type="datetime-local" name='departure' placeholder="Departure" disabled />
                </div>
                <p>Return Date :</p>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    <input class="form-control" type="datetime-local" name='return' placeholder="Return" disabled />
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                    <input class="form-control" type="text" name='request' placeholder="Duration" disabled />
                </div>
                
                    <strong>PARTICIPANT :</strong>
                    <div class="form-group">
                        @foreach (var item in Model)
                        {
                            <ul style="background-color:gainsboro; border-radius:25px; padding-left:15px; margin:3px 50px 0 3px;">
                                <li style="list-style:none;">@Html.DisplayFor(modelItem => item.Name)</li>
                            </ul>
                        }
                    </div>
                <div class="well">
                    <img style="height:35px; width:auto;" src="~/img/small_logo_c.png" />
                    <span><strong>CURRENT STATUS :</strong></span>
                </div>
                <ul>
                    <li class="blue" style="list-style-type:circle">Approved by <strong>Div. Head</strong></li>
                    <hr style="margin:5px 0" />
                    <li class="blue" style="list-style-type:circle">Approved by <strong>FD</strong></li>
                </ul>
                <hr />
            </div>
        </form>
</div>
<!-- Small modal -->

<script>
    function goBack() {
        window.history.back();
    }
</script>

<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="mySmallModalLabel">Small modal</h4>
            </div>
            <div class="modal-body">
                Hai... <strong>USER</strong>. Request Anda Sudah dikirim, tunggu informasi lebih lanjut..
            </div>
        </div>
    </div>
</div>