@model IEnumerable<WebTemplate.Models.Participant>

@{
    ViewBag.Title = "Travel Status List";
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}

<div class="container">
    <div class="row">
        <div class="Absolute-Center">
            <hr>
            <div class="col-xs-12 col-lg-10">
                <div style="padding:0 5px">
                    @foreach (var item in Model)
                    {
                        <div class="clearfix">
                            <div class="column content">
                                <a href="/TravelStatus/TravelStatus"><img style="margin:5px 0px; width:auto; height:50px" src="~/img/Travel-Status-icon-b.png" /></a>
                            </div>

                            <div class="column menu">
                                <div>
                                    <span class="templatetext">@Html.DisplayFor(modelItem => item.NoregId)</span>
                                </div>
                                <div>
                                    <span class="fnt2">Traveling to @Html.DisplayFor(modelItem => item.City)</span>
                                </div>
                                @if (item.Age > 1)
                                {
                                    <div>
                                        <span class="fnt1">Travel Group</span>
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <span class="fnt1">Travel Individu</span>
                                    </div>
                                }

                            </div>

                            <div class="column content2">
                                <strong><span>Rp. @Html.DisplayFor(modelItem => item.Amount)</span></strong>
                            </div>

                        </div>
                        <hr />
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>