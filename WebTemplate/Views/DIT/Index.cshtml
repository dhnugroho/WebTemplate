@model IEnumerable<WebTemplate.Models.Participant>

@{
    ViewBag.Title = "PARTICIPANT";
    Layout = "~/Views/Shared/_LayoutLg.cshtml";
}
<div style="height:100px; padding:70px 0 0 0;" class="well navbar-fixed-top">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Menu/">Home</a></li>
        <li class="breadcrumb-item active">Upload DIT</li>
    </ol>
</div>

<div class="container">
    <div class="row">
            <div style="margin:100px 100px 0 100px;" class="col-sm-12 col-md-10">
                <form class="width" action="/Home/Contact" id="loginForm">
                        <div class="thumbnail">
                            <div class="clearfix">
                                <div class="col-lg-12 cont-bg">
                                    <label>UPLOAD FILE</label>
                                </div>
                                <div class="col-lg-12 cont-bg">
                                    <div>
                                        <input type="file" id="SelectImage" />
                                        <a style="margin-top:10px" href="#" class="btn btn-sm btn-primary" onclick="UploadImage()">Upload</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                </form>
                <div style="padding:0 5px">

                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NoregId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>Operation</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div style="margin:0 0" class="checkbox">
                                        <label>@Html.DisplayFor(modelItem => item.NoregId)</label>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    Rp. @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    <div class="btn btn-lg btn-outline-primary">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.NoregId })
                                    </div>
                                    <div style="color:white" class="btn btn-lg btn-outline-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.NoregId })
                                    </div>
                               </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
    </div>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>