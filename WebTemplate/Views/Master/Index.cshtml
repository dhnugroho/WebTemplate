@model IEnumerable<WebTemplate.Models.tbl_registration>

@{
    ViewBag.Title = "PARTICIPANT";
    Layout = "~/Views/Shared/_LayoutLg.cshtml";
}

<div style="height:100px; padding:70px 0 0 0;" class="well navbar-fixed-top">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Menu/">Home</a></li>
        <li class="breadcrumb-item active">Upload Master</li>
    </ol>
</div>

<div class="container">
    <div class="row">
        <div style="margin:100px 100px 0 100px;" class="col-sm-12 col-md-10">
            <form method="post" action="/DIT/View/" enctype="multipart/form-data">
                <div class="clearfix">
                    <div class="col-lg-12 cont-bg">
                        <h4 style="text-align:left; padding:2px;">UPLOAD DATA MASTER</h4>
                    </div>
                    <div class="col-lg-12">
                        <div style="position:relative;">
                            <a style="font-size:12px" class='btn btn-primary' href='javascript:;'>
                                Choose File...
                                <input name="file" type="file" style='width:150px;position:absolute;z-index:2;top:0;left:0;filter: alpha(opacity=0);-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=0)";opacity:0;background-color:transparent;color:transparent;' name="file_source" size="40" onchange='$("#upload-file-info").html($(this).val());'>
                            </a>
                            &nbsp;
                            <span class='label label-info' id="upload-file-info"></span>
                            &nbsp;
                            <span><button type="submit" style="border-radius:100px; width:150px;" class="btn btn-lg btn-info ">Upload</button></span>
                        </div>
                    </div>
                </div>
            </form>
            <p style="border-top:1px solid gray; border-bottom:1px solid gray; padding-top:10px; padding-bottom:10px;">
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Allowance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>Operation</th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Allowance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Sr_no }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Sr_no }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Sr_no })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
